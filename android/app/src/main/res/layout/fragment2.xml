<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="243dp"
        android:layout_height="255dp"
        app:srcCompat="@drawable/monoxido_carbono" />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20px"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_background"
                android:text="El monóxido de carbono, un gas inodoro e incoloro originado por la combustión incompleta de combustibles, interfiere con el transporte de oxígeno en el cuerpo, llevando a efectos nocivos como daño al corazón, disfunciones neurológicas y fatiga. Su presencia en la atmósfera favorece la formación de ozono y CO2, incidiendo en el cambio climático."
                android:textSize="20sp" />
        </ScrollView>

    </androidx.cardview.widget.CardView>
</LinearLayout>
