<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="303dp"
        android:layout_height="220dp"
        app:srcCompat="@drawable/azufre" />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20px"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_background"
                android:text="El dióxido de azufre, generado mayormente por la quema de combustibles fósiles en actividades industriales, es un contaminante que puede causar problemas respiratorios severos y afectar a los ecosistemas, incluso a largas distancias de su origen. También contribuye a la formación de lluvia ácida y partículas finas en la atmósfera, perjudicando la salud y el ambiente."
                android:textSize="20sp" />
        </ScrollView>

    </androidx.cardview.widget.CardView>
</LinearLayout>
