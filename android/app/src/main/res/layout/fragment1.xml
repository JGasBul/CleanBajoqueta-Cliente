<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="262dp"
        android:layout_height="221dp"
        app:srcCompat="@drawable/ozono" />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20px"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="429dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_background"
                android:text="El ozono es un gas incoloro con una doble cara: el bueno en la estratosfera nos protege de la radiación ultravioleta, y el malo en la troposfera es un contaminante dañino que surge de la reacción de emisiones industriales y vehiculares con la luz solar, causando problemas respiratorios en humanos, daño a la vegetación y contribuyendo al efecto invernadero y al calentamiento global."
                android:textSize="20sp" />
        </ScrollView>
    </androidx.cardview.widget.CardView>

</LinearLayout>
